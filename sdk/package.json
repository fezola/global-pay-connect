{
  "name": "@klyr/sdk",
  "version": "1.0.0",
  "description": "Official Klyr SDK for accepting crypto payments",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
