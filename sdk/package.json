{
  "name": "@klyr/sdk",
  "version": "1.0.0",
  "description": "Official Klyr SDK for accepting crypto payments",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "require": "./dist/react.js",
      "import": "./dist/react.mjs",
      "types": "./dist/react.d.ts"
    },
    "./checkout": {
      "require": "./dist/checkout.js",
      "import": "./dist/checkout.mjs",
      "types": "./dist/checkout.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/checkout.ts src/react.tsx --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/checkout.ts src/react.tsx --format cjs,esm --dts --watch",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "klyr",
    "crypto",
    "payments",
    "solana",
    "usdc",
    "blockchain",
    "payment-gateway"
  ],
  "author": "Klyr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/klyr/sdk"
  },
  "bugs": {
    "url": "https://github.com/klyr/sdk/issues"
  },
  "homepage": "https://klyr.io",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}

